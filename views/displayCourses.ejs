<div class="py-4">
    <h2 class="text-3xl font-bold py-2">Explore Available Courses:</h2> <!-- Updated heading style -->
    <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6"> <!-- Changed list style to a grid with responsive columns -->
        <% for (let course of courses) { %>
        <li class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow duration-300"> <!-- Updated list item style -->
            <a href="/view-course/<%= course.id %>">
                <div class="p-4">
                    <h3 class="text-xl font-semibold mb-2"><%= course.courseName %></h3> <!-- Updated course name style -->
                    <p class="text-gray-600 mb-4"><%= course.courseContent %></p> <!-- Updated course content style -->
                    <div class="flex justify-between">
                        <a href="/view-course/<%= course.id %>" class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700">
                            View Course
                        </a>
                        <a href="/enrol-course/<%= course.id %>" class="bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700">
                            Enroll
                        </a>
                    </div>
                </div>
            </a>
        </li>
        <% } %>
    </ul>
</div>
